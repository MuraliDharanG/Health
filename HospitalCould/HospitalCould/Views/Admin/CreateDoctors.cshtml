@model HospitalCloud.Models.UserRegisteration

<!DOCTYPE html>
<html">
<head>
    <meta charset="UTF-8">
    <title>Registration Page</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- bootstrap 3.0.2 -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="../../css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="../../css/AdminLTE.css" rel="stylesheet" type="text/css" />
       <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
       
        <![endif]-->

</head>
<body>
    <div class="col-xs-8">
     <div class="col-xs-6"><h3 style="font-weight:600">Add New Doctor</h3></div>
        <div class="col-xs-6-offset" style="float:right">
            <button class="btn-primary" onclick="Back()">Back</button>
        </div>
        </div>
   
    <hr />
    <div class="col-xs-8">
        <form method="post" action="@Url.Action("CreateDoctors", "Admin")" class="form-horizontal" enctype="multipart/form-data">
            @Html.ValidationSummary(true)
            <div class="">

                <div class="form-group">
                   <label for="Name" class="control-label col-xs-2" style="text-align:left !important">Name</label>
                <div class="col-xs-10">
                   <input type="text" id="name" name="Name" class="form-control" placeholder="Name" />

                </div>
                </div>
               

                <div class="form-group">
                     <label for="Email" class="control-label col-xs-2" style="text-align:left !important">Email</label>
                     <div class="col-xs-10">
                     <input type="text" name="Email" class="form-control" id="Email" placeholder="Email" />
                         </div>
                </div>

                <div class="form-group">
                     <label for="Phone" class="control-label col-xs-2" style="text-align:left !important">Phone</label>
                     <div class="col-xs-10">
                    <input type="text" name="Phone" class="form-control" id="Phone" placeholder="Phone" />
                         </div>
                </div>

                <div class="form-group">
                     <label for="UserName" class="control-label col-xs-2" style="text-align:left !important">UserName</label>
                     <div class="col-xs-10">
                    <input type="text" name="UserName" class="form-control" id="UserName" placeholder="UserName" />
                         </div>

                </div>


                <div class="form-group">
                    <label for="Password" class="control-label col-xs-2" style="text-align:left !important">Password</label>
                     <div class="col-xs-10">
                    <input type="password" name="Password" class="form-control" id="Password" placeholder="Password" />
                         </div>
                </div>


                <div class="form-group">
                    <label for="SecurityImage" class="controle-label col-xs-2" style="text-align:left !important">Security Image</label>
                      <div class="col-xs-10">
                    <input type="file" name="SecurityImage" />
                          </div>
                </div>

                  <div class="form-group">
                    <label for="Department" class="controle-label col-xs-2" style="text-align:left !important">Department</label>
                      <div class="col-xs-10">
                      <input type="text" name="Department" class="form-control" id="Department" placeholder="Department" />
                          </div>
                </div>

                  <div class="form-group">
                    <label for="Designation" class="controle-label col-xs-2" style="text-align:left !important">Designation</label>
                      <div class="col-xs-10">
                      <input type="text" name="UserName" class="form-control" id="Designation" placeholder="Designation" />
                          </div>
                </div>





                <div class="form-group">
                    <div class="col-xs-offset-6">
                    <div class="col-xs-6"><button type="submit" class="btn bg-olive btn-block">Create Doctor</button></div>
                    <div class="col-xs-6"><button type="reset" class="btn bg-olive btn-block">Cancel</button></div>
                    </div>
                </div>
            </div>
        </form>
    </div>




    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/toastr.min.js")"></script>
    @Html.Partial("_Toastr")
    <script>

        function Back() {
            window.history.back();
        }
    </script>
</body>
</html>



