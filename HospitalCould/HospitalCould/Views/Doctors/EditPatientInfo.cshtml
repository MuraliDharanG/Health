@model HospitalCloud.Models.PatientRegistration

@{
    ViewBag.Title = "EditPatientInfo";
}

<h2>EditPatientInfo</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PatientRegistration</legend>
        <div class="col-xs-8">
            <div>
                <input type="hidden" name="patientId" value="@Model.Id"/>
            </div>

            <div class="form-group">
                <label for="PatientName" class="control-label col-xs-2" style="text-align: left !important">PatientName</label>
                <div class="col-xs-10">
                    <input type="text" id="PatientName" name="PatientName" class="form-control"  required placeholder="PatientName" value="@Model.PatientName" readonly />

                </div>
            </div>
            <div style="height:20px;"></div>
            <div class="form-group">
                <label for="PatientId" class="control-label col-xs-2" style="text-align: left !important">PatientId</label>
                <div class="col-xs-10">
                    <input type="text" id="PatientId1" name="PatientId1" class="form-control"  required placeholder="PatientId" value="@Model.PatientId" readonly />

                </div>
            </div>
            <div style="height:20px;"></div>
            <div class="form-group">
                <label for="Email" class="control-label col-xs-2" style="text-align: left !important">Email</label>
                <div class="col-xs-10">
                    <input type="text" id="Email" name="Email" class="form-control"  required placeholder="Email" value="@Model.Email" />

                </div>
            </div>

            <div style="height:20px;"></div>
            <div class="form-group">
                <label for="UserName" class="control-label col-xs-2" style="text-align: left !important">UserName</label>
                <div class="col-xs-10">
                    <input type="text" id="UserName" name="UserName" class="form-control"  required placeholder="UserName" value="@Model.UserName" readonly />

                </div>
            </div>

            <div style="height:20px;"></div>
            <div class="form-group">
                <label for="Password" class="control-label col-xs-2" style="text-align: left !important">Password</label>
                <div class="col-xs-10">
                    <input type="text" id="Password" name="Password" class="form-control"  required placeholder="Password" value="@Model.Password" />

                </div>
            </div>
<div style="height:20px;"></div>
            <div class="form-group">
                <label for="DoctorId" class="control-label col-xs-2" style="text-align: left !important">DoctorId</label>
                <div class="col-xs-10">
                    <input type="text" id="DoctorId" name="DoctorId" class="form-control"  required placeholder="DoctorId" value="@Model.DoctorId"  readonly/>

                </div>
            </div>

            <div style="height:20px;"></div>
            <p>
                <input type="button" value="Back" onclick="back()" class="btn btn-primary"  style="float:right;margin-right:20px;width:120px;"/>

                <input type="submit" value="Save" class="btn btn-primary"  style="float:right;margin-right:20px;width:120px;"/>
            </p>
        </div>
    </fieldset>
}

<style>
    .form-group {
        margin-bottom: 25px !important;
    }
</style>

<script>

    function Back() {
        window.history.back();
    }
</script>
