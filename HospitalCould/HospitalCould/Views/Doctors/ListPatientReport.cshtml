@model IEnumerable<HospitalCloud.Models.CloudFiles>

@{
    ViewBag.Title = "ListPatientReport";
}

<h2>ListPatientReport</h2>

<table id="patienttable" class="table table-striped table-bordered">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HospitalName)
            </th>
       
            <th>
                @Html.DisplayNameFor(model => model.Filename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.topic)
            </th>
         
            <th>Download</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HospitalName)
                </td>
              @*  <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Filename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.topic)
                </td>
               @* <td>
                    @Html.DisplayFor(modelItem => item.SecretKey)
                </td>*@
               @* <td>
                    @Html.DisplayFor(modelItem => item.Contentype)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>*@
                <td><a href="@Url.Action("download", "Doctors", new { id=item.Id })" target="_blank">download</a></td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#patienttable').DataTable();
    });
    function AddPatient() {
        debugger;
        window.location.href = "@Url.Action("AddPatient", "Doctors")";
    }
</script>
