@model HospitalCloud.Models.CloudFiles

@{
    ViewBag.Title = "UploadPatientReport";
}

<h2>UploadPatientReport</h2>

<form method="post" enctype="multipart/form-data" action="@Url.Action("UploadPatientReport", "Doctors")">
    @Html.ValidationSummary(true)


    <div class="col-xs-8">

        <div class="form-group">
            <label for="PatientId" class="controle-label col-xs-2" style="text-align: left !important">Patient</label>
            <div class="col-xs-10">
                @Html.DropDownList("PatientId", ((SelectList)ViewBag.PatientList), htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
          <div style="height: 20px;"></div>

        <div class="form-group">
            <label for="HospitalName" class="control-label col-xs-2" style="text-align: left !important">HospitalName</label>
            <div class="col-xs-10">
                <input type="text" name="HospitalName" class="form-control" id="HospitalName" placeholder="Hospital Name" />
            </div>
        </div>
          <div style="height: 20px;"></div>
        <div class="form-group">
            <label for="Address" class="control-label col-xs-2" style="text-align: left !important">Address</label>
            <div class="col-xs-10">
                <input type="text" name="Address" class="form-control" id="Address" placeholder="Address" />
            </div>
        </div>
          <div style="height: 20px;"></div>

        <div class="form-group">
            <label for="State" class="control-label col-xs-2" style="text-align: left !important">State</label>
            <div class="col-xs-10">
                <input type="text" name="State" class="form-control" id="State" placeholder="State" />
            </div>
        </div>

          <div style="height: 20px;"></div>




        <div class="form-group">
            <label for="Filename" class="controle-label col-xs-2" style="text-align: left !important">Filename</label>
            <div class="col-xs-10">
                <input type="file" name="report" id="report" class="form-control" />
            </div>
        </div>
          <div style="height: 20px;"></div>
        <div class="form-group">
            <label for="topic" class="control-label col-xs-2" style="text-align: left !important">topic</label>
            <div class="col-xs-10">
                <input type="text" name="topic" class="form-control" id="topic" placeholder="topic" />
            </div>
        </div>

          <div style="height: 20px;"></div>

        <div class="form-group">
            <div class="col-xs-offset-6">
                <div class="col-xs-6">
                     <input type="button" value="Back" class="btn btn-primary" onclick="Back()" style="width:120px;"/>
                </div>
                  <div class="col-xs-6">
                     <input type="submit" value="Create" class="btn btn-primary" style="width:120px;" />
                </div>

            </div>

     
    </div>

</form>

<script>

    function Back() {
        window.history.back();
    }
</script>
<style>
    .form-group {
        margin-top:20px;
    }
</style>